<div class="container">
  <h3>Rental Details</h3>
  <div class="row">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Equipment Name: <%= @equipment.name %></h5>
          <p class="card-text">Category: <%= @equipment.category %></p>
          <p class="card-text">Location: <%= @equipment.location %></p>
          <p class="card-text">Price: <%= number_to_currency(@equipment.price) %></p>
          <div class="equipment-description">
            <p class="card-text">Description: <%= @equipment.description %></p>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <%= simple_form_for([@equipment, @rental], data: { turbo: :false }) do |f| %>
            <%= f.input :rented_date, as: :string, input_html: { class: "form-control flatpickr-input" } %>
            <%= f.input :return_date, as: :string, input_html: { class: "form-control flatpickr-input" } %>
            <%= f.submit class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="equipment-image mt-4">
    <%= image_tag @equipment.photo, class: "img-fluid", alt: @equipment.name %>
  </div>

  <%# <h4>Rented Equipment:</h4>
  <% @equipment.rentals.each do |rental| %>
    <%# <div>
      <%# <h5>Rental ID: <%= rental.id %></h5>
      <%# <p>Rented Date: <%= rental.rented_date %></p>
      <%# <p>Return Date: <%= rental.return_date %></p>
    <%# </div>
    <hr>
  <% end %>

  <%= link_to "Back to all equipment", root_path, data: { turbo: :false }, class: "btn btn-secondary mt-3" %>
</div>
