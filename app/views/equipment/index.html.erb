<div class="container">
  <%# Slider Display Listings %>
  <div class="offcanvas offcanvas-start position-absolute end-75 w-75 canvas-color" tabindex="-1" id="offcanvasLeft" aria-labelledby="offcanvasExampleLabel">
    <div class="offcanvas-header">
      <h6 class="offcanvas-title" id="offcanvasExampleLabel">My Listings</h6>
      <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
      Listing 1
    </div>
  </div>
  <%# slider Display Listings end %>
  <%# Slider Add Listing %>
  <div class="offcanvas offcanvas-start position-absolute end-75 w-75 canvas-color" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
    <div class="offcanvas-header text-center ">
      <h5 id="offcanvasRightLabel"></h5>
      <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
      <div class="col-12 col-sm-6">
        <div class="rounded p-3">
          <h3>Add Listing</h3>
          <%= simple_form_for(@equipment_new, data:{turbo: :false}) do |f| %>
            <%= f.input :name %>
            <%= f.input :category %>
            <%= f.input :description %>
            <%= f.input :price %>
            <%= f.input :location %>
            <%= f.input :photo, as: :file %>
            <%= f.submit class:"btn btn-secondary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <%# slider add Listing end %>
  <div class="row">
    <div class="header col-12">
      <%= image_tag 'green_header.png', class: 'header-icon' %>
      <%= link_to '#offcanvasLeft', 'data-bs-toggle' => 'offcanvas' do %><%= image_tag 'menu_icon.svg',class: 'menu-icon'%> <% end %>
      <%= link_to '#offcanvasRight', 'data-bs-toggle' => 'offcanvas' do %><%= image_tag 'add_icon.svg', class: 'add-icon' %> <% end %>
      <%= image_tag 'small_logo.svg', class: 'logo' %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="search col-12">
      <%= form_tag(root_path, method: :get, data:{turbo: :false}) do %>
        <%= text_field_tag :search, params[:search], placeholder: 'Search Equipment', width: 400 %>
        <%= submit_tag 'Search' %>
        <%# <%= select_tag(:filter, options_for_select(['location_1', 'location_2', 'location_3']), class: 'location-bar') %>
        <%# <%= select_tag(:type, options_for_select(['type_1', 'type_2', 'type_3']), class: 'type-bar') %>
      <% end %>
      <% if @results %>
      <% @results.each do |equipment| %>
        <p><%= equipment.name %></p>
        <!-- Add other equipment attributes you want to display -->
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="row mt-5 justify-content-center">
    <div class="equipment-cards col-12">
      <% @equipment.each_slice(2) do |item_row| %>
        <div class="row justify-content-center">
          <% item_row.each do |item| %>
            <div class="equipment-card col-12 col-md-6 d-flex justify-content-center">
              <div class="equipment-card-inner">
                <div class="equipment-card-front d-flex flex-column justify-content-center align-items-center">
                    <%= cl_image_tag("#{item.photo.key}", class: "card-image key", width: 144, height: 96) %>
                  <p><%= item.name %></p>
                  <p><%= number_to_currency(item.price) %> - <%= item.location %></p>
                </div>
                <div class="equipment-card-back d-flex flex-column justify-content-center align-items-center">
                  <p><%= item.description %></p>
                  <button class="rent-button">Rent</button>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="nav-bar col-12 d-flex justify-content-around">
      <%= image_tag 'home_pot.svg' %>
      <%= image_tag 'market_pot.svg' %>
      <%= image_tag 'plants_pot.svg' %>
      <%= image_tag 'profile_pot.svg' %>
    </div>
  </div>
</div>
